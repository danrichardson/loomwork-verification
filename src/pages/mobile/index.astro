---
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// MOBILE EDITOR - FRAMEWORK FILE
//
// This page hosts the Loomwork Mobile editor.
// Do NOT edit in site repos - changes come from loomwork.
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
import { SITE } from "../../site.config";
import MobileApp from "../../components/mobile/MobileApp";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#1c1917" />
    <title>Edit - {SITE.name}</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="manifest" href="/mobile/manifest.json" />
    <style is:global>
      /* ── Mobile editor reset ─────────────────── */
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      html, body, #mobile-root { height: 100%; }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: #1c1917;
        background: #fafaf9;
        -webkit-font-smoothing: antialiased;
      }
      #mobile-root { display: flex; flex-direction: column; }
    </style>
  </head>
  <body>
    <div id="mobile-root">
      <MobileApp siteName={SITE.name} siteUrl={SITE.url} client:only="react" />
    </div>
    <script>
      if ("serviceWorker" in navigator) {
        window.addEventListener("load", () => {
          navigator.serviceWorker.register("/mobile/sw.js").catch(() => {});
        });
      }
    </script>
  </body>
</html>

---
import Base from "../layouts/Base.astro";
import { SITE } from "../site.config";
---

<Base title={SITE.name}>
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{SITE.name}</h1>
      <p class="hero__tagline">{SITE.tagline}</p>
      <p class="hero__description">{SITE.description}</p>

      <div class="hero__actions">
        <!--
          Customize these CTAs per-project.
          For Johnny Solarseed these will be:
            "I'm curious" → /learn/
            "I'm ready to build" → /guides/
            "I need help" → /consult/
        -->
        <a href="/about" class="btn btn--primary">Learn More</a>
      </div>
    </div>
  </section>
</Base>

<style>
  .hero {
    padding-block: var(--space-2xl);
    text-align: center;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-block-end: var(--space-md);
    letter-spacing: -0.02em;
  }

  .hero__tagline {
    font-size: var(--text-xl);
    color: var(--color-accent);
    font-weight: 600;
    margin-block-end: var(--space-md);
  }

  .hero__description {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    max-width: 36rem;
    margin-inline: auto;
    margin-block-end: var(--space-xl);
  }

  .hero__actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius);
    font-weight: 700;
    text-decoration: none;
    font-size: var(--text-base);
    transition: background var(--transition), color var(--transition);
  }

  .btn--primary {
    background: var(--color-accent);
    color: white;
  }
  .btn--primary:hover {
    background: var(--color-accent-hover);
    color: white;
  }
</style>

---
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// HOMEPAGE - SITE-SPECIFIC FILE
//
// This file is YOURS. Customize the layout, hero, CTAs,
// and content for your site. It won't conflict with
// framework updates from the loomwork repo.
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
import Base from "../layouts/Base.astro";
import { SITE } from "../site.config";
---

<Base title={SITE.name}>
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{SITE.name}</h1>
      <p class="hero__tagline">{SITE.tagline}</p>
      <p class="hero__description">{SITE.description}</p>

      <div class="hero__actions">
        {SITE.nav.map((item) => (
          <a href={item.href} class="btn btn--secondary">{item.label}</a>
        ))}
      </div>
    </div>
  </section>
</Base>

<style>
  .hero {
    padding-block: var(--space-2xl);
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    margin-block-end: var(--space-sm);
    letter-spacing: -0.025em;
  }

  .hero__tagline {
    font-size: var(--text-lg);
    color: var(--color-accent);
    font-weight: 600;
    margin-block-end: var(--space-lg);
  }

  .hero__description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    max-width: 36rem;
    margin-block-end: var(--space-xl);
  }

  .hero__actions {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
</style>

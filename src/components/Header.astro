---
import { SITE } from "../site.config";

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="site-header__inner container container--full">
    <a href="/" class="site-header__logo">
      <span class="site-header__mark">⬡</span>
      <span class="site-header__name">{SITE.name}</span>
    </a>

    {/* Mobile toggle */}
    <button
      class="site-header__toggle"
      aria-label="Toggle navigation"
      aria-expanded="false"
      data-nav-toggle
    >
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="site-header__nav" data-nav-menu>
      <ul>
        {SITE.nav.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "site-header__link",
                { active: currentPath.startsWith(item.href) },
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<script>
  // Minimal mobile nav toggle — no framework needed
  const toggle = document.querySelector("[data-nav-toggle]");
  const menu = document.querySelector("[data-nav-menu]");
  toggle?.addEventListener("click", () => {
    const expanded = toggle.getAttribute("aria-expanded") === "true";
    toggle.setAttribute("aria-expanded", String(!expanded));
    menu?.classList.toggle("is-open");
  });
</script>

<style>
  .site-header {
    border-block-end: 1px solid var(--color-border);
    background: var(--color-surface);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: var(--space-md);
    gap: var(--space-lg);
  }

  .site-header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    white-space: nowrap;
  }
  .site-header__logo:hover .site-header__mark { color: var(--color-accent-hover); }
  .site-header__logo:hover .site-header__name { color: var(--color-accent); }

  .site-header__mark {
    font-size: var(--text-xl);
    color: var(--color-accent);
    transition: color var(--transition);
    line-height: 1;
  }

  .site-header__name {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text);
    transition: color var(--transition);
  }

  .site-header__nav ul {
    display: flex;
    list-style: none;
    gap: var(--space-sm);
    margin: 0;
    padding: 0;
  }

  .site-header__link {
    display: block;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: var(--radius);
    transition: color var(--transition), background var(--transition);
  }
  .site-header__link:hover,
  .site-header__link.active {
    color: var(--color-accent);
    background: var(--color-accent-light);
  }

  /* ── Mobile ──────────────────────────────────────────── */
  .site-header__toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-xs);
  }
  .site-header__toggle span {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--color-text);
    transition: transform var(--transition);
  }

  @media (max-width: 768px) {
    .site-header__toggle { display: flex; }
    .site-header__nav {
      display: none;
      position: absolute;
      top: 100%;
      inset-inline: 0;
      background: var(--color-surface);
      border-block-end: 1px solid var(--color-border);
      padding: var(--space-md) var(--space-lg);
      box-shadow: var(--shadow-md);
    }
    .site-header__nav.is-open { display: block; }
    .site-header__nav ul { flex-direction: column; }
  }
</style>